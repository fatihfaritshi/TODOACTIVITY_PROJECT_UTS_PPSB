<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">

    <!-- State untuk ketika tombol ditekan -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Ganti dengan warna yang diinginkan -->
            <corners android:radius="100dp" />
            <alpha android:value="0.6" /> <!-- Menambahkan transparansi lebih saat ditekan -->
        </shape>
    </item>

    <!-- State default -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@color/white" /> <!-- Ganti dengan warna yang diinginkan -->
            <corners android:radius="100dp" />
            <alpha android:value="0.8" /> <!-- Sedikit transparan dalam keadaan normal -->
        </shape>
    </item>

</selector>
